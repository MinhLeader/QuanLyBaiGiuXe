@model QLBGX.ViewModel.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng Nhập</title>
    <!-- Thêm Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- Thêm Custom CSS -->
    <style>
        body {
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .btn-primary, .btn-secondary {
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            margin-top: 10px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .form-control {
            border-radius: 20px;
            padding: 20px;
            font-size: 16px;
        }

        .card-title {
            font-weight: 300;
            color: #007bff;
        }

        .text-center-custom {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">Đăng Nhập</h2>
                        <form asp-action="Login" method="post" class="mt-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="form-group">
                                <label for="TenDangNhap" class="control-label">Tên đăng nhập</label>
                                <input id="TenDangNhap" name="TenDangNhap" type="text" class="form-control" placeholder="Tên đăng nhập">
                                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MatKhau" class="control-label">Mật khẩu</label>
                                <input id="MatKhau" name="MatKhau" type="password" class="form-control" placeholder="Mật khẩu">
                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                            </div>
                        </form>
                        <div class="text-center-custom">
                            <p>Chưa có tài khoản? <a href="@Url.Action("Register", "Home")" class="btn btn-secondary">Đăng ký ngay</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Thêm Bootstrap JS và các dependency của nó -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
