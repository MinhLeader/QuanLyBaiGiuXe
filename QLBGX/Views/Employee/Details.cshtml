@model QLBGX.Models.NhanVien

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="container mt-4">
    <div class="card">
        <h5 class="card-header">Chi tiết nhân viên</h5>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-5">Tên nhân viên:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.TenNv)</dd>

                <dt class="col-sm-5">Số điện thoại:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.SoDienThoai)</dd>

                <dt class="col-sm-5">Địa chỉ:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-5">Email:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-5">Chức vụ:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.MaChucVuNavigation.TenChucVu)</dd>

                <dt class="col-sm-5">Tài khoản:</dt>
                <dd class="col-sm-7">
                    @foreach (var taiKhoan in Model.TaiKhoans)
                    {
                        <p>Tên đăng nhập: @Html.DisplayFor(model => taiKhoan.TenDangNhap)</p>
                        <p>Mật khẩu: @Html.DisplayFor(model => taiKhoan.MatKhau)</p>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Edit" asp-route-id="@Model.MaNv" class="btn btn-success mr-2"><i class="fas fa-edit"></i> Sửa</a>
            <a asp-action="Employee" class="btn btn-secondary"><i class="fas fa-list"></i> Quay lại danh sách</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/<your-kit-code>.js" crossorigin="anonymous"></script>
}
