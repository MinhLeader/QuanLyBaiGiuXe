@model IEnumerable<QLBGX.Models.NhanVien>

@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<h2>@ViewData["Title"]</h2>

<div class="my-4">
    <a asp-action="Create" class="btn btn-success">Thêm Nhân Viên Mới</a>
</div>

<!-- Bảng danh sách nhân viên -->
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Mã NV</th>
            <th>Tên NV</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Email</th>
            <th>Chức Vụ</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var nv in Model)
            {
                <tr>
                    <td>@nv.MaNv</td>
                    <td>@nv.TenNv</td>
                    <td>@nv.SoDienThoai</td>
                    <td>@nv.DiaChi</td>
                    <td>@nv.Email</td>
                    <td>@nv.MaChucVuNavigation.TenChucVu</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@nv.MaNv" class="btn btn-primary">Sửa</a>
                        <a asp-action="Details" asp-route-id="@nv.MaNv" class="btn btn-secondary">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@nv.MaNv" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">Không có dữ liệu nhân viên.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            new DataTable('#example');
        });
    </script>
}
