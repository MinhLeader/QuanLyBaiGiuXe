@model QLBGX.Models.NhanVien

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="container mt-5">
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <hr />

    <div>
        <h4>Bạn có chắc chắn muốn xóa nhân viên sau?</h4>
        <div class="alert alert-danger" role="alert">
            <strong>@Model.TenNv</strong> - Mã NV: @Model.MaNv
        </div>

        <dl class="row">
            <dt class="col-sm-4">Số điện thoại:</dt>
            <dd class="col-sm-8">@Model.SoDienThoai</dd>

            <dt class="col-sm-4">Địa chỉ:</dt>
            <dd class="col-sm-8">@Model.DiaChi</dd>

            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Chức vụ:</dt>
            <dd class="col-sm-8">@Model.MaChucVuNavigation?.TenChucVu</dd>

            <dt class="col-sm-4">Tài khoản:</dt>
            <dd class="col-sm-8">
                @foreach (var taiKhoan in Model.TaiKhoans)
                {
                    <p>Tên đăng nhập: @Html.DisplayFor(model => taiKhoan.TenDangNhap)</p>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MaNv" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Employee" class="btn btn-secondary">Hủy bỏ</a>
        </form>
    </div>
</div>
