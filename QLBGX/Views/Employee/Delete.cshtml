@model QLBGX.Models.NhanVien

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h1>Xóa nhân viên</h1>

<div>
    <h4>@Model.TenNv</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-sm-2">
            Mã nhân viên:
        </dt>
        <dd class="col-sm-10">
            @Model.MaNv
        </dd>
        <dt class="col-sm-2">
            Tên nhân viên:
        </dt>
        <dd class="col-sm-10">
            @Model.TenNv
        </dd>
        <dt class="col-sm-2">
            Số điện thoại:
        </dt>
        <dd class="col-sm-10">
            @Model.SoDienThoai
        </dd>
        <dt class="col-sm-2">
            Địa chỉ:
        </dt>
        <dd class="col-sm-10">
            @Model.DiaChi
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Chức vụ:
        </dt>
        <dd class="col-sm-10">
            @Model.MaChucVuNavigation?.TenChucVu
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaNv" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Employee" class="btn btn-secondary">Cancel</a>
    </form>
</div>
